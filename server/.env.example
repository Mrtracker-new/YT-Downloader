# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=youtube_downloader
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage
STORAGE_PATH=./downloads
TEMP_PATH=./temp
MAX_FILE_SIZE=2147483648
FILE_RETENTION_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Download Configuration
MAX_CONCURRENT_DOWNLOADS=3
MAX_QUEUE_SIZE=20
QUEUE_TIMEOUT_MS=300000
DOWNLOAD_TIMEOUT_MS=300000

# FFmpeg Path (leave empty to use system FFmpeg)
FFMPEG_PATH=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production_GENERATE_WITH_CRYPTO
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# Authentication
# Generate API keys with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEYS=your_api_key_1_here,your_api_key_2_here
REQUIRE_AUTH=true  # Set to 'false' to disable auth (development only!)

# Paths - NO HARDCODED PATHS!
YTDLP_PATH=yt-dlp  # Or /usr/bin/yt-dlp or C:\path\to\yt-dlp.exe

# Rate Limiting
DOWNLOAD_RATE_LIMIT_MAX=10
DOWNLOAD_RATE_LIMIT_WINDOW=3600000
STREAM_RATE_LIMIT_MAX=5
STREAM_RATE_LIMIT_WINDOW=300000

# Resource Limits
MAX_SSE_CONNECTIONS_PER_IP=5

# API Keys (if needed)
# YOUTUBE_API_KEY=your_api_key_here
